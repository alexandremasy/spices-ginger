{
  "author": "Alexandre Masy <hello@alexandremasy.com",
  "description": "A minimalist UMD module loader and handler. Allows you to create distributed web application.",
  "dependencies": {
    "@spices/cayenne": "^0.0.3"
  },
  "devDependencies": {
    "rollup": "^2.21.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "files": [
    "dist/*.js"
  ],
  "keywords": [
    "umd",
    "umd handler"
  ],
  "license": "UNLICENSED",
  "main": "dist/spices-gigner.min.js.js",
  "module": "dist/spices-ginger.esm.min.js",
  "name": "@spices/ginger",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.infinity-commerce.io/"
  },
  "scripts": {
    "bundle": "rollup -c",
    "start": "nodemon --exec \"yarn bundle\"",
    "prepublish": "yarn bundle"
  },
  "version": "0.6.7",
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "js"
  }
}
